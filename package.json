{
  "name": "gitify-prompt",
  "version": "0.1.1",
  "description": "Automatically capture Claude Code conversations and link them to git commits",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "gitify-prompt": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "dev": "tsc --watch",
    "test": "npm run build && node --test dist/**/*.test.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "claude-code",
    "claude",
    "anthropic",
    "prompt",
    "llm",
    "git",
    "version-control",
    "ai",
    "prompts",
    "testing",
    "conversation-capture",
    "code-assistant"
  ],
  "author": "Gaurav Pandey <gaurav.golu1@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gauravkrp/git-for-prompts.git"
  },
  "homepage": "https://github.com/gauravkrp/git-for-prompts#readme",
  "bugs": {
    "url": "https://github.com/gauravkrp/git-for-prompts/issues"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "date-fns": "^3.0.0",
    "diff": "^5.1.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12",
    "openai": "^4.24.1",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "table": "^6.8.1",
    "open": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/diff": "^5.0.8",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
